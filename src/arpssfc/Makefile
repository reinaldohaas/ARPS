#=======================================================================
#
#  PURPOSE: This makefile generates the ARPSSFC executable
#
#  AUTHOR:  Yuhe Liu
#           7/22/1997
#
#  Modification history:
#
#
#  OTHER INFORMATION:
#       See the makearps command.
#
#=======================================================================

#-----------------------------------------------------------------------
#
# Default shell
#
#-----------------------------------------------------------------------

# SHELL=/bin/csh

#-----------------------------------------------------------------------
#
# Default names of the loader and tar, can be replaced on the command
# line for other system
#
#-----------------------------------------------------------------------

FTN = f90
LDR = f90
CC  = cc

ARPS_LD = $(LDR)

TAR = tar
AWK = awk
RM  = rm
LN  = ln

TOPDIR = 
BINDIR = $(TOPDIR)
INCLDIR = $(TOPDIR)/include
LIBDIR = $(TOPDIR)/lib

#-----------------------------------------------------------------------
#
# Compiler Flag of Options. The default is for AIX Fortran xlf.
#
#-----------------------------------------------------------------------

FFLAGS =
CFLAGS =
LDFLAGS =

#-----------------------------------------------------------------------
#
# Dependencies
#
#-----------------------------------------------------------------------
.SUFFIXES: $(SUFFIXES) .f90

.f.o:
	$(FTN) $(FFLAGS) $(FIXFLAGS) -c $<
.f90.o:
	$(FTN) $(FFLAGS) $(FREEFLAGS) -c $<
.c.o:
	$(CC)  $(CFLAGS) -c $<

#-----------------------------------------------------------------------
#
# Executable to be generated by this make file:
#
# SFCEXE = arpssfc       ARPSSFC executable
#
#-----------------------------------------------------------------------

SFCEXE = arpssfc

#-----------------------------------------------------------------------
#
# ARPS and ADAS library to be linked
#
# LIBARPS = libarps      ARPS shared library
#
#-----------------------------------------------------------------------

LIBARPS = libarps
LIBADAS = libadas

#-----------------------------------------------------------------------
#
# List of machine-dependent object codes
#
#-----------------------------------------------------------------------

SFCMAINOBJ = arpssfc.o

SFCOBJS1 = arpssfclib.o

SFCOBJS = $(SFCMAINOBJ) $(SFCOBJS1)

#-----------------------------------------------------------------------
#
# Set Default
#
#-----------------------------------------------------------------------

default: $(SFCEXE)

#-----------------------------------------------------------------------
#
# Compile and link ARPS model executable, arps
#
#-----------------------------------------------------------------------

$(SFCEXE): $(BINDIR)/$(SFCEXE)
	ls -l $(BINDIR)/$(SFCEXE)

$(BINDIR)/$(SFCEXE): $(SFCOBJS) $(LIBDIR)/$(LIBARPS).a
	$(ARPS_LD) $(LDFLAGS) -o $@ $(SFCOBJS)    \
        $(LIBDIR)/$(LIBARPS).a $(LIBDIR)/$(LIBADAS).a $(LIBS)

#-----------------------------------------------------------------------
#
# Remove the object code for individual programs
#
#-----------------------------------------------------------------------

clean.arpssfc:
	-$(RM) -f $(BINDIR)/$(SFCEXE) $(SFCOBJS)

#-----------------------------------------------------------------------
#
# Object code dependency list:
#
#-----------------------------------------------------------------------

arpssfc.o   : arpssfc.f90      $(INCLDIR)/arpssfc.inc \
                               $(INCLDIR)/globcst.inc \
                               $(INCLDIR)/grid.inc \
                               $(INCLDIR)/ext2arps.inc
arpssfclib.o: arpssfclib.f90   $(INCLDIR)/arpssfc.inc \
                               $(INCLDIR)/globcst.inc \
                               $(INCLDIR)/grid.inc \
                               $(INCLDIR)/phycst.inc
