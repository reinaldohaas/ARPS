#=======================================================================
#
#  PURPOSE: This makefile generates the ARPSSOIL executable
#
#  AUTHOR:  Yuhe Liu
#           7/22/1997
#
#  Modification history:
#
#
#  OTHER INFORMATION:
#       See the makearps command.
#
#=======================================================================

#-----------------------------------------------------------------------
#
# Default shell
#
#-----------------------------------------------------------------------

# SHELL=/bin/csh

#-----------------------------------------------------------------------
#
# Default names of the loader and tar, can be replaced on the command
# line for other system
#
#-----------------------------------------------------------------------

FTN = f90
LDR = f90
CC  = cc

ARPS_LD = $(LDR)

TAR = tar
AWK = awk
RM  = rm
LN  = ln

TOPDIR = 

BINDIR = $(TOPDIR)
INCLDIR = $(TOPDIR)/include
LIBDIR = $(TOPDIR)/lib

#-----------------------------------------------------------------------
#
# Compiler Flag of Options. The default is for AIX Fortran xlf.
#
#-----------------------------------------------------------------------

FFLAGS =
CFLAGS =
LDFLAGS =

FIXFLAGS  =
FREEFLAGS =

#-----------------------------------------------------------------------
#
# Dependencies
#
#-----------------------------------------------------------------------
.SUFFIXES: $(SUFFIXES) .f90

.f.o:
	$(FTN) $(FFLAGS) $(FIXFLAGS) -c $<
.f90.o:
	$(FTN) $(FFLAGS) $(FREEFLAGS) -c $<
.c.o:
	$(CC)  $(CFLAGS) -c $<

#-----------------------------------------------------------------------
#
# Executable to be generated by this make file:
#
# SOILEXE = arpssoil       ARPSSOIL executable
#
#-----------------------------------------------------------------------

SOILEXE = arpssoil

#-----------------------------------------------------------------------
#
# ARPS library to be linked
#
# LIBARPS = libarps      ARPS shared library
# LIBADAS = libadas      ADAS shared library
#
#-----------------------------------------------------------------------

LIBARPS = libarps
LIBADAS = libadas

#-----------------------------------------------------------------------
#
# List of machine-dependent object codes
#
#-----------------------------------------------------------------------

SOILMAINOBJ = arpssoil.o

SOILOBJS1 = mksoilvar.o

SOILOBJS = $(SOILMAINOBJ) $(SOILOBJS1)

#-----------------------------------------------------------------------
#
# Set Default
#
#-----------------------------------------------------------------------

default: $(SOILEXE)

#-----------------------------------------------------------------------
#
# Compile and link ARPS model executable, arps
#
#-----------------------------------------------------------------------

$(SOILEXE): $(BINDIR)/$(SOILEXE)
	ls -l $(BINDIR)/$(SOILEXE)

$(BINDIR)/$(SOILEXE): $(SOILOBJS) $(LIBDIR)/$(LIBARPS).a $(LIBDIR)/$(LIBADAS).a
	$(ARPS_LD) $(LDFLAGS) -o $@ $(SOILOBJS) \
                   $(LIBDIR)/$(LIBARPS).a       \
                   $(LIBDIR)/$(LIBADAS).a $(LIBS)

#-----------------------------------------------------------------------
#
# Remove the object code for individual programs
#
#-----------------------------------------------------------------------

clean.arpssoil:
	-$(RM) -f $(BINDIR)/$(SOILEXE) $(SOILOBJS)

#-----------------------------------------------------------------------
#
# Object code dependency list:
#
#-----------------------------------------------------------------------

arpssoil.o    : arpssoil.f90   $(INCLDIR)/globcst.inc \
                               $(INCLDIR)/grid.inc    \
                               $(INCLDIR)/indtflg.inc
mksoilvar.o   : mksoilvar.f90  $(INCLDIR)/globcst.inc \
                               $(INCLDIR)/grid.inc    \
                               $(INCLDIR)/indtflg.inc \
                               $(INCLDIR)/phycst.inc  \
                               $(INCLDIR)/soilcst.inc 
mnet2arps.o   : mnet2arps.f90  $(INCLDIR)/globcst.inc  \
                               $(INCLDIR)/grid.inc 

